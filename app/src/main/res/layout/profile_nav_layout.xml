<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center_horizontal"
    android:background="@drawable/profile_of_fullscreen"
    tools:context=".MainActivity">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/propic_of_avro"
            android:layout_marginTop="30dp"
            app:civ_border_width="10dp"
            app:civ_border_color="#E80D0D"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasibul Avro"
        android:textColor="#FFEB3B"
        android:textSize="40sp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/averoxy"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="avrotajin2002@gmail.com"
        android:textColor="#FFEB3B"
        android:textSize="40sp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/magical_regular"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="100dp"
        >
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="View Profile"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/averoxy"
            android:background="@drawable/button_bg"
            android:textColor="#FFEB3B"
            android:textStyle="bold"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="log out"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/averoxy"
            android:background="@drawable/revarse_btn"
            android:textColor="#FFEB3B"
            android:textStyle="bold"/>
    </LinearLayout>






</LinearLayout>